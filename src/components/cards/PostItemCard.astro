---
import type { Post } from '@/lib/Interfaces'
import { Image } from 'astro:assets'
type Props = {
  post: Post
}
const { post }: Props = Astro.props
---

<div
  class="rounded-box bg-white flex w-full h-60 overflow-hidden group mb-5 shadow-2xl"
>
  <div class="basis-2/3 p-4">
    <div class="text-7xl">{post.data.title}</div>
    <div class="text-2xl">{post.data.description}</div>
  </div>

  <div class="basis-1/3">
    <Image
      class="w-full h-full object-cover rounded-r-box clip-diagonal rounded-bl-2xl transform transition-transform duration-500 group-hover:scale-125"
      src="/xx.png"
      alt={post.data.title}
      width={300}
      height={300}
    />
  </div>
</div>

<style>
  .clip-diagonal {
    clip-path: polygon(50% 0, 100% 0, 100% 100%, 0 100%);
  }
</style>
