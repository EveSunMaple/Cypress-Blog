---
import RootLayout from '@/layouts/RootLayout/RootLayout.astro'
import ContentCard from '@/components/cards/ContentCard.astro'
import LinkCard from '@/components/cards/LinkCard.astro'
import { Image } from 'astro:assets'
---

<RootLayout title="home">
  <ContentCard slot="content">
    <Image
      class="rounded-3xl object-cover w-full h-full select-none"
      src="/cypress-logo.png"
      alt="cypress"
      width={100}
      height={100}
    />
    <div class="p-3 m-4">
      <div
        class="font-extrabold text-8xl flex justify-center items-center select-none"
      >
        Zypressen
      </div>
    </div>

    <div class="flex justify-between">
      <LinkCard
        text="关于我，以及这个博客网站"
        link="/about"
        title="about"
      />
      <LinkCard
        text="我发了新东西了吗？"
        link="/blog"
        title="blog"
      />
    </div>
  </ContentCard>
</RootLayout>
